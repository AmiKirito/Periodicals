@using Client.HtmlHelpers
@using Client.ViewModels
@model PublisherViewModel

@{
    ViewBag.Title = "Publishers";
}

<table class="table">
    <tr>
        <td>Title</td>
        <td>Authors</td>
    </tr>
    @foreach (var item in Model.Publishers)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Authors</td>
        </tr>
    }
</table>
<br />
<div class="btn-group">
    @Html.PageLinks(Model.PageInfo, x => Url.Action("Index", new { page = x }))
</div>

